<header>
  <h2>Dashboard</h2>
</header>

  <form action="/api/menu/select" method="post">
<article>
  <select name="id" id="id">
    {{#each menuItems}}
      <option value="{{id}}">{{food}} - calories: {{calories}}</option>
    {{/each}}
  </select>
  <div>
    <center>
      {{#each selectedMenuItems}}
      <p>{{food}} - calories: {{calories}}</p>
      {{/each}}
    </center>
  </div>
  <footer>
    <button type="submit">Select Menu Item</button>
  </footer>
</article>
  </form>
